  <script src="script.js"></script>
  <script>
      const progressBar = document.querySelector('.progress');
      const percentageSpan = document.querySelector('.percentage');

      // Função para atualizar a barra de progresso
      function updateProgress(readPages, totalPages) {
          const percentage = (readPages / totalPages) * 100;
          progressBar.style.width = `${percentage}%`;
          percentageSpan.textContent = `${percentage.toFixed(1)}%`;
      }

      // Exemplo de uso: assuming you have a variable 'totalPages' and 'readPages'
      updateProgress(20, 96); // Indica que 20 de 96 páginas foram lidas (20.8%)

      const quotesContainer = document.querySelector('.quotes-container');

      // Função para criar e adicionar uma citação ao container
      function createQuote(quoteText, author) {
          const quoteElement = document.createElement('div');
          quoteElement.classList.add('quote');

          const quoteParagraph = document.createElement('p');
          quoteParagraph.textContent = quoteText;

          const authorElement = document.createElement('span');
          authorElement.classList.add('author');
          authorElement.textContent = `- ${author}`;

          quoteElement.appendChild(quoteParagraph);
          quoteElement.appendChild(authorElement);

          quotesContainer.appendChild(quoteElement);
      }

      // Exemplo de uso: Adicione suas citações aqui
      createQuote('Lorem ipsum dolor sit amet, consectetur adipiscing elit.', 'John Doe');
      createQuote('Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.', 'Jane Doe');
      createQuote('Lorem ipsum dolor sit amet, consectetur adipiscing elit.', 'John Doe');
       createQuote('Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.', 'Jane Doe');

  </script>
